<h1>School Information</h1>
<%= stylesheet_link_tag "school_form" %>
<div class = "container-sm  bg-primary p-3 text-white  border">

<%= form_for(@school) do |f| %>
<div class = 'form'>
    <div class = 'spl_row' >
        <div class = 'lable'>
            <p>Name:</p>
        </div>
        
        <div class = 'spl_input'>
            <%= f.text_field(:name) %>
        </div>
    </div>
    
    <div class = 'spl_row' >
        <div class = 'lable'>
            <p>Adress:</p>
        </div>
        
        <div class = 'spl_input'>
            <%= f.text_field(:adress) %>
        </div>
    </div>
    
    <div class = 'spl_row' >
        <div class = 'lable'>
            <p>City:</p>
        </div>
        
        <div class = 'spl_input'>
            <%= f.text_field(:city) %>
        </div>
    </div>
    
    <div class = 'spl_row' >
        <div class = 'lable'>
            <p>Phone:</p>
        </div>
        
        <div class = 'spl_input'>
            <%= f.telephone_field(:phone) %>
        </div>
    </div>

    <div class = 'spl_row' >
        <div class = 'lable'>
            <p>Email:</p>
        </div>
        
        <div class = 'spl_input'>
            <%= f.email_field(:email) %>
        </div>
    </div>

    <div class = 'spl_row' >
        <div class = 'lable'>
            <p>Zip Code:</p>
        </div>
        
        <div class = 'spl_input'>
            <%= f.text_field(:zip_code) %>
        </div>
    </div>
</div>

<div class = 'submit_button'>
    <%= f.submit("Update")%>
</div>

<%end%>
</div>